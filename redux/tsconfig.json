{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "declaration": false,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "lib": ["es2015", "es2017", "dom"],
    "removeComments": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
